#!/bin/sh

# Install mythryl globally (/usr/bin etc)
# from local files.  You'll need to be root
# to run this, most likely.

SHELL=/bin/sh

REAL_PWD=`pwd`
ROOT=${PWD:-$REAL_PWD}
SCRIPTS_DIR=$ROOT/sh

BINARIES_TO_LS="$DESTDIR/usr/bin/mythryl-runtime-intel32 $DESTDIR/usr/bin/mythryl-ld $DESTDIR/usr/bin/mythryl $DESTDIR/usr/bin/my $DESTDIR/usr/bin/mythryld  $DESTDIR/usr/bin/build-an-executable-mythryl-heap-image"
# Alternate system root for installing mythryl.
# This is used by dpkg and other packaging systems.
# DESTDIR="${DESTDIR}"

# PREFIX is also used by some unix users and software packaging system, but is currently unsupported.

# Created 2007-03-15 CrT under LGPL.

# Modified by Michele Bini for .deb packaging

# Function to install a script.
#   This takes care of patching the source
#   of the script with the SHELL and BIN_DIR
#   variables to use.
#

patch_and_install_script() {
    dsrc=$1
    ddst=$2

    rm -f "$DESTDIR""/usr/bin"/"$ddst"
    cat "$SCRIPTS_DIR"/"$dsrc" | \
    sed -e "s,@SHELL@,$SHELL,g" \
	-e "s,^root_anchor=.*,root_anchor=/usr/lib/mythryl,g" \
	-e "s,@BIN_DIR@,/usr/bin,g" \
	> "$DESTDIR""/usr/bin"/"$ddst"
    chmod 555 "$DESTDIR""/usr/bin"/"$ddst"
    if [ ! -x "$DESTDIR""/usr/bin"/"$ddst" ]; then
	complain "                         sh/make-c-stuff:   Installation of $DESTDIR/usr/bin/${ddst} failed."
    fi
}

#
# Before actually doing anything, make sure
# we have everything in hand to do a complete,
# functional install:

if [ ! -x bin/mythryl-runtime-intel32 ]; then
    echo "No bin/mythryl-runtime-intel32 executable found -- did you do 'make compiler'?"
    exit 1
fi

if [ ! -x bin/mythryl ]; then
    echo "No bin/mythryl executable found -- did you do 'make compiler'?"
    exit 1
fi

if [ ! -x bin/mythryld ]; then
    echo "No bin/mythryld executable found -- did you do 'make compiler'?"
    exit 1
fi

if [ ! -x bin/set-heapdump-shebang ]; then
    echo "No bin/set-heapdump-shebang executable found -- did you do 'make compiler'?"
    exit 1
fi

if [ ! -d "$DESTDIR"/usr/bin ]; then
    echo "No $DESTDIR/usr/bin directory exists -- make-install script giving up."
    exit 1
fi

if [ -z "$DESTDIR" ] && [ -f /usr/bin/mythryl-runtime-intel32 ]; then
    mv /usr/bin/mythryl-runtime-intel32 /usr/bin/mythryl-runtime-intel32.previous
    if [ -f /usr/bin/mythryl-runtime-intel32 ]; then
        echo "Couldn't rename /usr/bin/mythryl-runtime-intel32 to /usr/bin/mythryl-runtime-intel32.previous -- you may need to su to root to install."
        exit 1
    fi
fi

if [ -z "$DESTDIR" ] && [ -f /usr/bin/mythryl-ld ]; then
    mv /usr/bin/mythryl-ld /usr/bin/mythryl-ld.previous
    if [ -f /usr/bin/mythryl-ld ]; then
        echo "Couldn't rename /usr/bin/mythryl-ld to /usr/bin/mythryl-ld.previous -- you may need to su to root to install."
        exit 1
    fi
fi

if [ -z "$DESTDIR" ] && [ -f /usr/bin/mythryl ]; then
    mv /usr/bin/mythryl /usr/bin/mythryl.previous
    if [ -f /usr/bin/mythryl ]; then
        echo "Couldn't rename /usr/bin/mythryl to /usr/bin/mythryl.previous -- you may need to su to root to install."
        exit 1
    fi
fi

if [ -z "$DESTDIR" ] && [ -f /usr/bin/mythryld ]; then
    mv /usr/bin/mythryld /usr/bin/mythryld.previous
    if [ -f /usr/bin/mythryld ]; then
        echo "Couldn't rename /usr/bin/mythryld to /usr/bin/mythryld.previous -- you may need to su to root to install."
        exit 1
    fi
fi



####################################################################################
# Do not edit this or following lines --- they are autobuilt.  (patchname="rename")
# Do not edit this or preceding lines --- they are autobuilt.
####################################################################################



cp bin/mythryl-runtime-intel32 "$DESTDIR"/usr/bin/mythryl-runtime-intel32
chmod 755                   "$DESTDIR"/usr/bin/mythryl-runtime-intel32
if [ ! -x "$DESTDIR"/usr/bin/mythryl-runtime-intel32 ]; then
    echo "Couldn't install $DESTDIR/usr/bin/mythryl-runtime-intel32 -- you may need to su to root to install."
    exit 1
fi

patch_and_install_script _mythryl-ld mythryl-ld
chmod 755         "$DESTDIR"/usr/bin/mythryl-ld
if [ ! -x "$DESTDIR"/usr/bin/mythryl-ld ]; then
    echo "Couldn't install $DESTDIR/usr/bin/mythryl-ld -- you may need to su to root to install."
    exit 1
fi

cp bin/mythryl "$DESTDIR"/usr/bin/mythryl
chmod 755      "$DESTDIR"/usr/bin/mythryl
if [ ! -x "$DESTDIR"/usr/bin/mythryl ]; then
    echo "Couldn't install $DESTDIR/usr/bin/mythryl -- you may need to su to root to install."
    exit 1
fi

cp bin/mythryld "$DESTDIR"/usr/bin/mythryld
chmod 755       "$DESTDIR"/usr/bin/mythryld
if [ ! -x "$DESTDIR"/usr/bin/mythryld ]; then
    echo "Couldn't install $DESTDIR/usr/bin/mythryld -- you may need to su to root to install."
    exit 1
fi
if [ -L "$DESTDIR"/usr/bin/my ]; then
    rm "$DESTDIR"/usr/bin/my
fi
if [ -z "$DESTDIR" ] && [ ! -e /usr/bin/my ]; then
    ln -s /usr/bin/mythryld /usr/bin/my
else
    ( cd "$DESTDIR"/usr/bin; [ -e my ] || ln -sf mythryld my )
fi

bin/set-heapdump-shebang "$DESTDIR"/usr/bin/mythryld '#!/usr/bin/mythryl-runtime-intel32 --shebang
'

if [ -x bin/mythryl-gtk-slave ]; then
    cp bin/mythryl-gtk-slave "$DESTDIR"/usr/bin/mythryl-gtk-slave
    chmod 755        "$DESTDIR"/usr/bin/mythryl-gtk-slave
fi

####################################################################################
# Do not edit this or following lines --- they are autobuilt.  (patchname="install")
# Do not edit this or preceding lines --- they are autobuilt.
####################################################################################

patch_and_install_script _build-an-executable-mythryl-heap-image build-an-executable-mythryl-heap-image


echo "Installed in $DESTDIR/usr/bin:"
ls -l $BINARIES_TO_LS

exit 0
